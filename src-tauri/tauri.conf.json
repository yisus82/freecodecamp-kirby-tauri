{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kirby",
  "version": "0.1.0",
  "identifier": "com.kirby.app",
  "build": {
    "beforeDevCommand": "npm run dev:browser",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:browser",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kirby",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  }
}
